---
import Base from './Base.astro';

interface Props {
  title: string;
  description: string;
  date: Date;
}

const { title, description, date } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<Base title={title} description={description}>
  <article>
    <header class="mb-8">
      <time class="text-sm text-[var(--text-muted)]">{formattedDate}</time>
      <h1 class="text-2xl font-semibold tracking-tight mt-2">{title}</h1>
      {description && (
        <p class="text-[var(--text-muted)] mt-2">{description}</p>
      )}
    </header>
    <div class="prose">
      <slot />
    </div>
  </article>
</Base>
