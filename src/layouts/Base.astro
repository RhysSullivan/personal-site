---
import { ViewTransitions } from 'astro:transitions';
import Nav from '../components/Nav.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  wide?: boolean;
}

const { title, description = 'Rhys Sullivan', wide = false } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/jpeg" href="/favicon.jpg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=JetBrains+Mono:wght@400&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <ViewTransitions />
    <script is:inline>
      function setTheme() {
        const theme = localStorage.getItem('theme') ?? 
          (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
        if (theme === 'dark') {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.remove('dark');
        }
      }
      setTheme();
      document.addEventListener('astro:after-swap', setTheme);
      
      const historyStack = [{ path: window.location.pathname, scroll: 0 }];
      
      document.addEventListener('astro:before-swap', () => {
        if (historyStack.length > 0) {
          historyStack[historyStack.length - 1].scroll = window.scrollY;
        }
      });
      
      document.addEventListener('astro:after-swap', () => {
        const current = window.location.pathname;
        if (historyStack[historyStack.length - 1]?.path !== current) {
          historyStack.push({ path: current, scroll: 0 });
        }
      });
      
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && historyStack.length > 1) {
          historyStack.pop();
          const prev = historyStack[historyStack.length - 1];
          if (prev) {
            sessionStorage.setItem('restoreScroll', String(prev.scroll));
            window.location.replace(prev.path);
          }
        }
      });
      
      window.addEventListener('popstate', (e) => {
        e.stopImmediatePropagation();
        const scroll = historyStack.length > 1 ? historyStack[historyStack.length - 2]?.scroll : 0;
        historyStack.pop();
        sessionStorage.setItem('restoreScroll', String(scroll || 0));
        window.location.reload();
      });
      
    </script>
  </head>
  <body>
    <div class:list={['min-h-screen px-6 mx-auto', wide ? 'max-w-[1600px]' : 'max-w-2xl']}>
      <Nav />
      <main class="pb-16">
        <slot />
      </main>
    </div>
    <script is:inline>
      (function() {
        const restoreScroll = sessionStorage.getItem('restoreScroll');
        if (restoreScroll) {
          const scrollY = parseInt(restoreScroll);
          sessionStorage.removeItem('restoreScroll');
          document.documentElement.style.opacity = '0';
          document.documentElement.style.scrollBehavior = 'auto';
          window.scrollTo(0, scrollY);
          document.documentElement.style.scrollBehavior = '';
          requestAnimationFrame(() => {
            document.documentElement.style.opacity = '1';
          });
        }
      })();
    </script>
  </body>
</html>
